<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/lin_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/pad_50dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_3dp"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_weight="1"
            android:background="@color/colorviewfirst" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_3dp"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_weight="1"
            android:background="@color/colorviewsecond" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_3dp"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_weight="1"
            android:background="@color/colorviewthird" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_weight="1"
            android:background="@color/colorviewthird" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_3dp"
            android:layout_weight="1"
            android:background="@color/colorviewthird" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_bf_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_view"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Tips para una buena foto"
        android:textColor="@color/colortextthird"
        android:textSize="@dimen/txt_20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lin_view"/>

    <TextView
        android:id="@+id/tv_cardtype2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tool"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Cédula de ciudadania"
        android:visibility="invisible"
        android:textColor="@color/colorviewsecond"
        android:textSize="@dimen/txt_20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bf_picture" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="173dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Cara posterior"
        android:visibility="invisible"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cardtype2" />

    <ImageView
        android:id="@+id/ib_ka_front_card"
        android:layout_width="244dp"
        android:layout_height="127dp"
        android:layout_marginBottom="408dp"
        android:background="@drawable/frontid3x"
        android:contentDescription="@string/front"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ib_ka_back_card"
        android:layout_width="244dp"
        android:layout_height="127dp"
        android:layout_marginBottom="404dp"
        android:background="@drawable/cedula_atras1"
        android:contentDescription="@string/back"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_ka_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_ka_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ka_name"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView_picture"
        android:layout_width="190dp"
        android:layout_height="157dp"
        android:layout_marginTop="110dp"
        android:scaleX="-1"
        android:src="@drawable/group2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bf_picture" />

    <ImageView
        android:id="@+id/imageView_picture2"
        android:layout_width="144dp"
        android:layout_height="162dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/group115"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bf_picture" />

    <ImageView
        android:id="@+id/imageView_picture3"
        android:layout_width="96dp"
        android:layout_height="89dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_picture2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_picture2"
        android:src="@drawable/cc" />

    <Button
        android:id="@+id/btn_takepicture_front"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="58dp"
        android:background="@drawable/btnbgsecond"
        android:fontFamily="@font/gilroy_semibold"
        android:onClick="frontSideCapturePressed"
        android:text="Confirmar foto"
        android:visibility="invisible"
        android:textAllCaps="false"
        android:textColor="#1B2132"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="38dp"
        android:fontFamily="@font/gilroy_semibold"
        android:gravity="center"
        android:text="Un lugar con buena luz"
        android:textColor="#5B2797"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_picture" />

    <Button
        android:id="@+id/btn_siguiente1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/montserrat_bold"
        android:text="Entendido"
        android:textAllCaps="false"
        android:onClick="frontSideCapturePressed"
        android:textColor="#5B2797"
        android:textColorHighlight="#E6FF00"
        android:textColorHint="#00A01E1E"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="255dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:text="Evita lugares oscuros y reflejos en la cámara"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/dots"
        android:layout_width="37dp"
        android:layout_height="19dp"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/dots3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="244dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.41000003"
        android:src="@drawable/backid3x" />

    <ProgressBar
        android:id="@+id/prb_afe"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="396dp"
        android:background="@color/transparent"
        android:indeterminate="true"
        android:indeterminateTint="#5B2797"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>